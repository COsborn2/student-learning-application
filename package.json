{
  "name": "student-learning-program",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"nodemon server.js\" \"npm run client\"",
    "dev:server": "nodemon server.js",
    "start": "node server.js",
    "test": "npm run test-all-standard && mocha ./server.tests/*.js && cd client && npm test",
    "heroku-postbuild": "npm run setup && cd client && npm run build",
    "setup": "npm install && cd client && npm install",
    "test-server-standard": "standard ./server.tests/*.js ./server.js ./db/**/*.js ./models/**/*.js ./routes/**/*.js | snazzy",
    "fix-server-standard": "standard ./server.tests/*.js ./server.js ./db/**/*.js ./models/**/*.js ./routes/**/*.js --fix",
    "test-client-standard": "cd client && npm run test-standard",
    "fix-client-standard": "cd client && npm run fix-standard",
    "test-all-standard": "npm run test-server-standard && npm run test-client-standard",
    "fix-all-standard": "npm run fix-server-standard && npm run fix-client-standard"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "mocha": "^5.2.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.6"
  }
}
